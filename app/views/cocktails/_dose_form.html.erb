<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.collection_select :ingredient_id, Ingredient.order(:name),:id,:name, include_blank: true, prompt: "select ingredient" %>
    <br /><br />
    <%= f.input :description, label: false, placeholder: "type a dose description" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
